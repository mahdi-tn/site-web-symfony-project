{% extends 'base.html.twig' %}

{% block title %}Comments index
{% endblock %}

{% block body %}
	{% include "header.html.twig" %}

	<h1>Comments index</h1>
	<br>
	<a class="btn btn-primary" href="{{ path('app_products_index') }}">retour</a>
	{# <a class="btn btn-primary" href="{{ path('app_comments_new') }}">Create new</a> #}
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Rating</th>
				<th>Comment</th>
				<th>Date</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for comment in comments %}
				<tr>
					<td>{{ comment.id }}</td>
					<td>{{ comment.rating }}</td>
					<td>{{ comment.comment }}</td>
					<td>{{ comment.date ? comment.date|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a class="btn btn-primary" href="{{ path('app_comments_show', {'id': comment.id}) }}">show</a>
						<a class="btn btn-primary" href="{{ path('app_comments_edit', {'id': comment.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{% include "footer.html.twig" %}

{% endblock %}
