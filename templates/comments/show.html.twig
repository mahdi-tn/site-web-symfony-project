{% extends 'base.html.twig' %}

{% block title %}Comments
{% endblock %}

{% block body %}
	<h1>Comments</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ comment.id }}</td>
			</tr>
			<tr>
				<th>Rating</th>
				<td>{{ comment.rating }}</td>
			</tr>
			<tr>
				<th>Comment</th>
				<td>{{ comment.comment }}</td>
			</tr>
			<tr>
				<th>Date</th>
				<td>{{ comment.date ? comment.date|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-primary" href="{{ path('app_comments_index') }}">back to list</a>

	<a class="btn btn-primary" href="{{ path('app_comments_edit', {'id': comment.id}) }}">edit</a>

	{{ include('comments/_delete_form.html.twig') }}
{% endblock %}
