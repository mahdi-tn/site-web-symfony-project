{% extends 'base.html.twig' %}

{% block title %}Products
{% endblock %}

{% block body %}
	{% include "header.html.twig" %}

	<div class="container">
		<a class="btn btn-primary" href="{{ path('app_products_index') }}">back to list</a>
		<br>
		<br>
		<h1>Product</h1>
		<br>
		{% if product is not null %}


			<table class="table">
				<tbody>
					<tr hidden>
						<th>P_ref</th>
						<td id="refref">{{ product.pRef }}</td>
					</tr>
					<tr>
						<th>P_name</th>
						<td id="namecart">{{ product.pName }}</td>
					</tr>
					<tr>
						<th>P_stock</th>
						<td>{{ product.pStock }}</td>
					</tr>
					<tr>
						<th>P_price</th>
						<td id="pricart">{{ product.pPrice }}</td>
					</tr>
					<tr>
						<th>P_img</th>
						<td><img class="test" src="{{ product.pImg }}" alt="img here"></td>
					</tr>
					<tr>
						<th>P_category</th>
						<td id="categorycart">{{ product.pCategory }}</td>
					</tr>
					<tr>
						<th>P_color</th>
						<td id="colorcart">{{ product.pColor }}</td>
					</tr>
				</tbody>
			</table>

			<a class="btn btn-primary" href="{{ path('app_products_edit', {'p_ref': product.pRef}) }}">edit</a>

			{{ include('products/_delete_form.html.twig') }}
			<div class="container">
				<br>
				<h2>Comments</h2>
				<br>

				{% if comments is not null %}
					<ul>
						{% for comment in comments %}
							<li>rating:
								{{ comment.rating }}
								STARS</li>
							{{ comment.comment }}
							<br>date:
							{{ comment.date|date("d/m/Y") }}
							<br><br>
						{% endfor %}
					</ul>
				{% else %}
					<p>No comments.</p>
				{% endif %}

			</div>
		{% else %}
			<p>Product not found.</p>
		{% endif %}
		<button id="ADDTOCARD" class="primary-btn">ADD TO CARD</button>
		<a class="btn btn-primary" href="{{ path('app_comments_new', { 'p_ref': product.pRef }) }}">add new comment</a>
		<br>
		<br>

	</div>

	{% include "footer.html.twig" %}

{% endblock %}
